<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nzc.hrm.dao.DeptDao" >

   <insert id="insert" parameterType="com.nzc.hrm.entity.po.DeptInfo">
       insert into dept_inf (NAME,REMARK) values (#{name},#{remark});
   </insert>

    <select id="getElementById" parameterType="com.nzc.hrm.entity.po.DeptInfo" resultType="com.nzc.hrm.entity.po.DeptInfo">
        select * from dept_inf where id=#{id}
    </select>
</mapper>